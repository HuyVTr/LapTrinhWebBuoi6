@model IEnumerable<LapTrinhWebBuoi6.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Danh sách sản phẩm</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@Url.Content("~/images/" + item.ImageUrl)"
                         class="card-img-top object-fit-cover"
                         style="height: 200px; width: 100%; object-fit: cover; border-top-left-radius: 0.5rem; border-top-right-radius: 0.5rem;"
                         alt="@item.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">Giá: @string.Format("{0:N0} đ", item.Price)</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
