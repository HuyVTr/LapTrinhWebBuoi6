@model LapTrinhWebBuoi6.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content("~/images/" + Model.ImageUrl)" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">Giá: @string.Format("{0:N0} đ", Model.Price)</p>
            @if (Model.Category != null)
            {
                <p><strong>Danh mục:</strong> @Model.Category.Name</p>
            }
            <p><strong>Mô tả:</strong> @Model.Description</p>
            <a asp-controller="Home" asp-action="Shop" class="btn btn-secondary mt-3">Quay lại</a>
        </div>
    </div>
</div>
